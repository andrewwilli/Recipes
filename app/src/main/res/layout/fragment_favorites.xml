<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView

            android:id="@+id/favorite_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            tools:srcCompat="@tools:sample/avatars" />
        <TextView
            android:id="@+id/favorite_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/favorite_item_image"
            android:text="@string/recipe_title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:autoSizeTextType="uniform"
            android:autoSizeStepGranularity="2sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favorite_item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ready_in_15_min"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/favorite_item_image"
            android:layout_below="@+id/favorite_item_title"
            android:textSize="@dimen/recipe_duration_random" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>